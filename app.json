{
  "id": "no.easee",
  "version": "0.9.9",
  "brandColor": "#323232",
  "compatibility": ">=3.0.0",
  "sdk": 2,
  "name": {
    "en": "Easee Charger"
  },
  "tags": {
    "en": [
      "easee",
      "charge",
      "charger"
    ]
  },
  "description": {
    "en": "Control your Easee charger"
  },
  "author": {
    "name": "Richard Barkestam",
    "email": "richard@barkestam.se"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "RBarkestam",
        "currency": "EUR"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/ricott/homey-no.easee/issues"
  },
  "source": "https://github.com/ricott/homey-no.easee",
  "homeyCommunityTopicId": 31647,
  "category": [
    "energy"
  ],
  "dependencies": {
    "net": "*"
  },
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "capabilities": {
    "enabled": {
      "title": {
        "en": "Enabled"
      },
      "type": "boolean",
      "getable": true,
      "setable": false,
      "icon": "/assets/enabled.svg"
    },
    "charger_status": {
      "type": "string",
      "title": {
        "en": "Status"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/onoff.svg"
    },
    "current_offered": {
      "type": "number",
      "decimals": 2,
      "title": {
        "en": "Current offered"
      },
      "units": {
        "en": "A"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/max_charge.svg"
    },
    "threePhase": {
      "title": {
        "en": "3-phase charging"
      },
      "type": "boolean",
      "getable": true,
      "setable": false,
      "icon": "/assets/phase.svg"
    },
    "measure_charge": {
      "type": "number",
      "decimals": 2,
      "title": {
        "en": "Last 30 days"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "/assets/last_month_charge.svg",
      "units": {
        "en": "kWh"
      }
    }
  },
  "drivers": [
    {
      "id": "charger",
      "class": "other",
      "name": {
        "en": "Easee charger"
      },
      "images": {
        "large": "/drivers/charger/assets/images/large.png",
        "small": "/drivers/charger/assets/images/small.png"
      },
      "capabilities": [
        "charger_status",
        "enabled",
        "measure_current.offered",
        "measure_power",
        "measure_current.p1",
        "measure_current.p2",
        "measure_current.p3",
        "measure_voltage",
        "meter_power",
        "measure_charge.lifetime",
        "measure_charge",
        "measure_charge.last_month",
        "button.organize"
      ],
      "capabilitiesOptions": {
        "measure_current.offered": {
          "title": {
            "en": "Current allocated"
          }
        },
        "measure_current.p1": {
          "title": {
            "en": "Current P1"
          }
        },
        "measure_current.p2": {
          "title": {
            "en": "Current P2"
          }
        },
        "measure_current.p3": {
          "title": {
            "en": "Current P3"
          }
        },
        "meter_power": {
          "title": {
            "en": "Last charge session"
          }
        },
        "measure_charge.last_month": {
          "title": {
            "en": "Last month"
          }
        },
        "measure_charge.lifetime": {
          "title": {
            "en": "Lifetime"
          }
        },
        "button.organize": { 
          "maintenanceAction": true,
          "title": { 
             "en": "Reorder capabilities"
          },
          "desc": { 
             "en": "Reorder capabilities in the intended order."
          }
       }
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Easee charger settings"
          },
          "children": [
            {
              "id": "showLast30daysStats",
              "type": "checkbox",
              "label": {
                "en": "Show last 30 days kWh capability"
              },
              "value": false
            },
            {
              "id": "showLastMonthStats",
              "type": "checkbox",
              "label": {
                "en": "Show last month kWh capability"
              },
              "value": false
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Information"
          },
          "children": [
            {
              "id": "detectedPowerGridType",
              "type": "label",
              "label": {
                "en": "Power grid type"
              },
              "value": ""
            },
            {
              "id": "mainFuse",
              "type": "label",
              "label": {
                "en": "Main fuse (A)"
              },
              "value": ""
            },
            {
              "id": "circuitFuse",
              "type": "label",
              "label": {
                "en": "Circuit fuse (A)"
              },
              "value": ""
            },
            {
              "id": "offlineChargingMode",
              "type": "label",
              "label": {
                "en": "Allow offline charging"
              },
              "value": ""
            },
            {
              "id": "maxOfflineCurrent",
              "type": "label",
              "label": {
                "en": "Max current when offline (A)"
              },
              "value": ""
            },
            {
              "id": "phaseMode",
              "type": "label",
              "label": {
                "en": "Phase mode"
              },
              "value": ""
            },
            {
              "id": "lockCablePermanently",
              "type": "label",
              "label": {
                "en": "Cable locked permanently"
              },
              "value": ""
            },
            {
              "id": "idleCurrent",
              "type": "label",
              "label": {
                "en": "Enable idle current"
              },
              "value": ""
            },
            {
              "id": "nodeType",
              "type": "label",
              "label": {
                "en": "Local node type"
              },
              "value": ""
            },
            {
              "id": "smartCharging",
              "type": "label",
              "label": {
                "en": "Smart charging"
              },
              "value": ""
            },
            {
              "id": "version",
              "type": "label",
              "label": {
                "en": "Firmware version"
              },
              "value": ""
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Debug"
          },
          "children": [
            {
              "id": "reasonForNoCurrent",
              "type": "textarea",
              "label": {
                "en": "Reason for no current"
              },
              "value": ""
            },
            {
              "id": "site",
              "type": "textarea",
              "label": {
                "en": "Site info"
              },
              "value": ""
            },
            {
              "id": "commandResponse",
              "type": "textarea",
              "label": {
                "en": "Last command response"
              },
              "value": ""
            },
            {
              "id": "easee_last_error",
              "type": "textarea",
              "label": {
                "en": "Last API error"
              },
              "value": ""
            }
          ]
        }
      ],
      "pair": [
        {
          "id":"login_credentials",
          "template":"login_credentials",
          "options":{
            "usernameLabel":"Phone number",
            "usernamePlaceholder":"+46....",
            "passwordLabel":"Password"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "charger_status_changed",
        "title": {
          "en": "Charger status changed"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=charger"
          }
        ],
        "tokens": [
          {
            "name": "status",
            "type": "string",
            "title": {
                "en": "Charger status"
            },
            "example": {
                "en": "Car connected"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id":"chargerStatus",
        "title":{
           "en":"Charger status is !{{|not}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=charger"
          },
          {
            "name": "status",
            "type": "dropdown",
            "title": {
                "en": "Status"
            },
            "values": [
              {"id": "Standby", "label": {"en": "Standby"}},
              {"id": "Paused", "label": {"en": "Paused"}},
              {"id": "Charging", "label": {"en": "Charging"}},
              {"id": "Completed", "label": {"en": "Completed"}},
              {"id": "Error", "label": {"en": "Error"}},              
              {"id": "Car connected", "label": {"en": "Car connected"}}
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "toggleCharger",
        "title": {
          "en": "Toggle Charger state"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=charger"
          }
        ]
      },
      {
        "id": "chargerControl",
        "title": {
          "en": "Control Charger"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=charger"
          },
          {
            "name": "chargerAction",
            "type": "dropdown",
            "title": {
              "en": "Charger action"
            },
            "values": [
              {"id": "START", "label": {"en": "Start Charging"}},
              {"id": "STOP", "label": {"en": "Stop Charging"}},
              {"id": "PAUSE", "label": {"en": "Pause Charging"}},
              {"id": "RESUME", "label": {"en": "Resume Charging"}}
            ]
          }
        ]
      },
      {
        "id":"circuitCurrentControl",
        "title":{
          "en":"Set dynamic Circuit current"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=charger"
          },
          {
            "name": "current",
            "type": "range",
            "title": {
                "en": "Current"
            },
            "min": 1,
            "max": 32,
            "step": 1,
            "label": " Amps",
            "labelDecimals": 0
          }
        ]
      },
      {
        "id":"circuitCurrentControlPerPhase",
        "title":{
          "en":"Set dynamic Circuit current, per phase"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=charger"
          },
          {
            "name": "current1",
            "type": "range",
            "title": {
                "en": "Current P1"
            },
            "min": 0,
            "max": 32,
            "step": 1,
            "label": " Amps",
            "labelDecimals": 0
          },
          {
            "name": "current2",
            "type": "range",
            "title": {
                "en": "Current P2"
            },
            "min": 0,
            "max": 32,
            "step": 1,
            "label": " Amps",
            "labelDecimals": 0
          },
          {
            "name": "current3",
            "type": "range",
            "title": {
                "en": "Current P3"
            },
            "min": 0,
            "max": 32,
            "step": 1,
            "label": " Amps",
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "chargerState",
        "title": {
          "en": "Set Charger state"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=charger"
          },
          {
            "name": "chargerState",
            "type": "dropdown",
            "title": {
              "en": "Charger state"
            },
            "values": [
              {"id": "true", "label": {"en": "Enabled"}},
              {"id": "false", "label": {"en": "Disabled"}}
            ]
          }
        ]
      },
      {
        "id": "enableIdleCurrent",
        "title": {
          "en": "Set Charger idle current state"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=charger"
          },
          {
            "name": "idleCurrent",
            "type": "dropdown",
            "title": {
              "en": "Idle current"
            },
            "values": [
              {"id": "true", "label": {"en": "Enabled"}},
              {"id": "false", "label": {"en": "Disabled"}}
            ]
          }
        ]
      },
      {
        "id": "lockCablePermanently",
        "title": {
          "en": "Set permanent cable lock"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=charger"
          },
          {
            "name": "lockCable",
            "type": "dropdown",
            "title": {
              "en": "Permanent cable lock"
            },
            "values": [
              {"id": "true", "label": {"en": "Enabled"}},
              {"id": "false", "label": {"en": "Disabled"}}
            ]
          }
        ]
      },
      {
        "id":"ledStripBrightness",
        "title":{
          "en":"Set Charger led strip brightness"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=charger"
          },
          {
            "name": "ledBrightness",
            "type": "range",
            "title": {
                "en": "Brightness"
            },
            "min": 0,
            "max": 100,
            "step": 1,
            "label": " %",
            "labelDecimals": 0
          }
        ]
      }
    ]
  }
}